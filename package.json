{
  "name": "node-pkware",
  "version": "0.0.1",
  "description": "The nodejs implementation of StormLib's pkware compressor/de-compressor",
  "main": "src/index.mjs",
  "scripts": {
    "test": "node --experimental-modules --no-warnings test/index.mjs",
    "test:watch": "nodemon --experimental-modules --no-warnings test/index.mjs --ext .mjs",
    "lint": "eslint \"src/**/*.+(js|mjs)\"",
    "lint:fix": "npm run lint -- --fix",
    "unit": "mjs-mocha",
    "unit:watch": "nodemon --exec \"npx mjs-mocha\" --watch *.spec.mjs --watch *.test.mjs",
    "lint:staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meszaros-lajos-gyorgy/node-pkware.git"
  },
  "bugs": {
    "url": "https://github.com/meszaros-lajos-gyorgy/node-pkware/issues"
  },
  "homepage": "https://github.com/meszaros-lajos-gyorgy/node-pkware#readme",
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "ramda": "^0.27.0",
    "through2": "^3.0.1"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.2.9",
    "mjs-mocha": "^3.0.0",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "prettier-config-standard": "^1.0.1"
  },
  "pre-commit": [
    "lint:staged",
    "unit"
  ],
  "lint-staged": {
    "*.{js,mjs}": "eslint --fix"
  }
}
