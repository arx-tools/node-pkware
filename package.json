{
  "name": "node-pkware",
  "version": "0.0.4",
  "description": "The nodejs implementation of StormLib's pkware compressor/de-compressor",
  "main": "src/index.mjs",
  "bin": {
    "implode": "bin/implode.mjs",
    "explode": "bin/explode.mjs"
  },
  "scripts": {
    "test": "node --experimental-modules --no-warnings test/index.mjs",
    "test:watch": "nodemon --experimental-modules --no-warnings test/index.mjs --ext .mjs",
    "lint": "eslint \"src/**/*.+(js|mjs)\"",
    "lint:fix": "npm run lint -- --fix",
    "unit": "mocha --experimental-modules --no-warnings test/**/*.spec.mjs --timeout 5000",
    "unit:watch": "nodemon --exec \"npm run unit\" --watch test --watch src",
    "lint:staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meszaros-lajos-gyorgy/node-pkware.git"
  },
  "bugs": {
    "url": "https://github.com/meszaros-lajos-gyorgy/node-pkware/issues"
  },
  "homepage": "https://github.com/meszaros-lajos-gyorgy/node-pkware#readme",
  "author": "Lajos Meszaros <m_lajos@hotmail.com>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "minimist": "^1.2.5",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-ramda": "^2.5.1",
    "eslint-plugin-standard": "^4.0.1",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "prettier-config-standard": "^1.0.1"
  },
  "pre-commit": [
    "lint:staged",
    "unit"
  ],
  "lint-staged": {
    "*.{js,mjs}": "eslint --fix"
  }
}
